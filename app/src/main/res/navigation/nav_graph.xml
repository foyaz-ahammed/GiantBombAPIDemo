<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.rocket.assessment.fragments.MainFragment"
        android:label="Game List"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_detailFragment"
            app:destination="@id/detail_fragment">
            <argument
                android:name="arg_game_item"
                app:argType="com.rocket.assessment.entities.Response$GameItem" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/detail_fragment"
        android:name="com.rocket.assessment.fragments.DetailFragment"
        android:label="Game Detail"
        tools:layout="@layout/fragment_detail" />

</navigation>